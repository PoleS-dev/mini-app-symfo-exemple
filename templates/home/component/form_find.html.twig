 {# FORM FIND() #}
<div class="border m-auto text-center flex flex-col gap-20 max-xl:w-1/2 p-5 {{ theme }}">
	<h3 class="text-2xl">Exemple de form pour la méthode find()</h3>

	<form action="{{ path('home') }}" method="POST" data-turbo-frame="produit_frame">
		<input type="hidden" name="form" value="select_produit">
		<select name="produit" id="produit">
			{% if produits %}
				{% for produit in produits %}
					<option value="{{ produit.id }}">{{ produit.nom }}</option>
				{% endfor %}
			{% endif %}
		</select>
		<button class="btn btn-primary" type="submit">Rechercher</button>
	</form>
	<turbo-frame id="produit_frame">
		{% if selectedProduit %}
			<div class="card">
				<h2>Produit sélectionné :</h2>
				<ul>
					<li>
						<strong>Nom :</strong>
						{{ selectedProduit.nom }}</li>
					<li>
						<strong>Description :</strong>
						{{ selectedProduit.description }}</li>
					<li>
						<strong>Prix :</strong>
						{{ selectedProduit.prix }}
						€</li>
					<li>
						<strong>Stock :</strong>
						{{ selectedProduit.stock }}</li>
					<li>
						<strong>Catégorie :</strong>
						{{ selectedProduit.category.name }}</li>
				</ul>

				<div class="m-auto">
					<img class="m-auto" src="{{ asset('images/product_image/' ~ selectedProduit.img) }}" alt="{{ selectedProduit.nom }}" style="width: 200px;">
				</div>
			</div>
		{% endif %}
	</turbo-frame>

</div>